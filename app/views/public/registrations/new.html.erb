 
 <%= render "layouts/error", resource: resource %>

<h2 class="heading">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 
  
  <div class="field">
    <%= f.label :ユーザー名 %>
    <%= f.text_field :name, autofocus: true, :placeholder => "hanako" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autocomplete: "email", :placeholder => "sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="btn">
    <%= f.submit "新規登録", class: "btn__simple--blue" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
