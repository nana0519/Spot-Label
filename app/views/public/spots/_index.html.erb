<div class="index">
  <% spots.each do |spot| %>

    <div class="index__item">
      <div class="image">
        <ul class="image__box">
          <% spot.spot_images.each do |image| %>
            <li class="image__item">
              <%=link_to spot_path(spot) do %>
                <%= image_tag image, size: "340x340" %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="index__content">
        <span class="index__text">
          <%= spot.address.truncate(20, omission: 'â€¦') %>
        </span>
        <span id="favorite-btn-<%= spot.id %>">
          <%= render "public/favorites/favorite", spot: spot %>
        </span>
      </div>
    </div>

  <% end %>
</div>

