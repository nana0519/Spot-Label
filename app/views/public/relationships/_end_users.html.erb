<table class="table">
  <% if end_users.exists? %>
  
    <% end_users.each do |end_user| %>
      <tr class="table__row">
        <td class="table__item">
          <%= link_to end_user_path(end_user) do %>
            <%= image_tag end_user.get_profile_image, class: "profile__image--small", size: "100x100" %>
          <% end %>
        </td>
        <td class="table__item">
          <%= link_to end_user_path(end_user) do %>
            <%= end_user.name %>
          <% end %>
        </td>
        <td class="table__item" id="follow-btn-<%= end_user.id %>">
          <%= render "public/relationships/follow_btn", end_user: end_user %>
        </td>
      </tr>
    <% end %>
    
  <% else %>
    <td>ユーザーはいません</td>
  <% end %>
</table>

