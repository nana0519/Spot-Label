<!--エラー表示-->
<%= render "layouts/error", resource: @contact %>

<h3 class="heading">お問い合わせフォーム</h3> 
<%= form_with model: @contact, url: contacts_path, local: true do |f| %>
  <div class="form__label">
    <%= f.label :お名前 %>
    <%= f.text_field :name, placeholder: "ユーザー名" %>
  </div>
  <div class="form__label">
    <%= f.label :お問い合わせ内容 %>
    <%= f.text_area :content, placeholder: "お問い合わせ内容を入力してください" %>
  </div>
  <div class="form__label">
    <%= f.submit "送信" %>
  </div>
  
<% end %>